<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/scrolllayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <!-- show me layout -->

                <LinearLayout
                    android:id="@+id/showmemainlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:id="@+id/showmetextlayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:padding="10dp" >

                        <TextView
                            android:id="@+id/showmetextivew"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:text="Notifications" />

                        <!-- <TextView -->
                        <!-- android:id="@+id/showmetextivew" -->
                        <!-- android:layout_width="wrap_content" -->
                        <!-- android:layout_height="wrap_content" -->
                        <!-- android:layout_alignParentLeft="true" -->
                        <!-- android:layout_centerVertical="true" -->
                        <!-- android:layout_marginLeft="15dp" -->
                        <!-- android:textStyle="bold" -->
                        <!-- android:text="Notifications" /> -->


                        <!-- <TextView -->
                        <!-- android:id="@+id/maleFemaleTextview" -->
                        <!-- android:layout_width="wrap_content" -->
                        <!-- android:layout_height="wrap_content" -->
                        <!-- android:layout_alignParentRight="true" -->
                        <!-- android:layout_centerVertical="true" -->
                        <!-- android:layout_marginRight="15dp" -->
                        <!-- android:textStyle="bold" -->
                        <!-- android:text="App Settings" /> -->
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/checknmlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/showmetextlayout"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/selector_transparent_clicked"
                        android:padding="3dp" >

                        <TextView
                            android:id="@+id/newmsgtextview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="25dp"
                            android:gravity="center"
                            android:text="New Matches"
                            android:textColor="@color/white" />

                        <ToggleButton
                            android:id="@+id/toggleButton_matches"
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="25dp"
                            android:background="@drawable/toggle_selector"
                            android:text=""
                            android:textOff=""
                            android:textOn="" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dip"
                        android:background="@color/trans_white" />

                    <RelativeLayout
                        android:id="@+id/checkmlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/checknmlayout"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/selector_transparent_clicked"
                        android:padding="3dp" >

                        <TextView
                            android:id="@+id/msgtextview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="25dp"
                            android:gravity="center"
                            android:text="Messages"
                            android:textColor="@color/white" />

                        <ToggleButton
                            android:id="@+id/toggleButton_messages"
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="25dp"
                            android:background="@drawable/toggle_selector"
                            android:text=""
                            android:textOff=""
                            android:textOn="" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dip"
                        android:background="@color/trans_white" />

                    <RelativeLayout
                        android:id="@+id/appviblayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/checkmlayout"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/selector_transparent_clicked"
                        android:padding="3dp" >

                        <TextView
                            android:id="@+id/vibtextview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="25dp"
                            android:gravity="center"
                            android:text="In-App Vibrations"
                            android:textColor="@color/white" />

                        <ToggleButton
                            android:id="@+id/toggleButton_app_vib"
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="25dp"
                            android:background="@drawable/toggle_selector"
                            android:text=""
                            android:textOff=""
                            android:textOn="" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dip"
                        android:background="@color/trans_white" />
                </LinearLayout>

                <!-- limit to searchlayout -->


                <!-- show age layout -->

                <RelativeLayout
                    android:id="@+id/showdistancetextlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/showdistancetextview"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="15dp"
                        android:text="@string/showdistancetextview" />

                    <TextView
                        android:id="@+id/distancevalue"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:text="Km/Mi" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/showdistanceUnitlayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/limit_search_tab"
                    android:visibility="gone" >

                    <RelativeLayout
                        android:id="@+id/MiTextviewparentlayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/selector_on" >

                        <TextView
                            android:id="@+id/MiTextview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:text="@string/mitext" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/kmTextviewparentLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/selector_off" >

                        <TextView
                            android:id="@+id/kmTextview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:text="@string/kimetertext" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/policy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <Button
                        android:id="@+id/policyButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_white_clicked"
                        android:gravity="left"
                        android:padding="10dp"
                        android:text="Privacy Policy" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:background="@color/trans_black" />

                <RelativeLayout
                    android:id="@+id/Termslayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <Button
                        android:id="@+id/termsButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_white_clicked"
                        android:gravity="left"
                        android:padding="10dp"
                        android:text="Terms of Service" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:background="@color/trans_black" />

                <RelativeLayout
                    android:id="@+id/logoutlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <Button
                        android:id="@+id/logoutButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_white_clicked"
                        android:gravity="left"
                        android:padding="10dp"
                        android:text="@string/logout" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:background="@color/trans_black" />

                <RelativeLayout
                    android:id="@+id/logoLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/imageView19"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/leaf" />

                    <TextView
                        android:id="@+id/versiontextview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imageView19"
                        android:text="Version 1.0" />
                </RelativeLayout>

                <!-- <RelativeLayout -->
                <!-- android:id="@+id/deletAcountlayout" -->
                <!-- android:layout_width="match_parent" -->
                <!-- android:layout_height="wrap_content" -->
                <!-- android:layout_gravity="center_horizontal" -->
                <!-- android:layout_marginLeft="10dp" -->
                <!-- android:layout_marginRight="10dp" -->
                <!-- android:layout_marginTop="10dp" -->
                <!-- android:layout_marginBottom="10dp"> -->


                <!-- <Button -->
                <!-- android:id="@+id/deleteaccount" -->
                <!-- android:layout_width="match_parent" -->
                <!-- android:layout_height="wrap_content" -->
                <!-- android:layout_alignParentLeft="true" -->
                <!-- android:layout_centerHorizontal="true" -->
                <!-- android:layout_centerVertical="true" -->
                <!-- android:layout_marginLeft="10dp" -->
                <!-- android:background="@drawable/selector_for_contac" -->
                <!-- android:gravity="center" -->
                <!-- android:text="@string/deleteaccount" /> -->
                <!-- </RelativeLayout> -->

            </LinearLayout>
        </ScrollView>
        
        <RelativeLayout
        android:id="@+id/deletAcountlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="bottom" >

        <Button
            android:id="@+id/deleteaccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_theme_clicked"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/deleteaccount"
            android:textColor="@android:color/white"
            android:textSize="17sp" />
        
    </RelativeLayout>
    
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomlayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@drawable/limit_search_tab"
        android:orientation="horizontal"
        android:visibility="gone" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/chat"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/message" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/setting"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/settings_icon" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/sharepair"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/sharepair" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>