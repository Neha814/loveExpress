<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relay1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp" >

    <LinearLayout
        android:id="@+id/help_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <!-- android:background="@drawable/popup" -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/popup_background"
            android:orientation="vertical" >

            <com.appdupe.pair.utility.FontTextView
                android:id="@+id/unmatch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_transparent_clicked"
                android:gravity="center"
                android:padding="10dp"
                android:text="Unmatch "
                android:textColor="@color/black_light"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/grey_logout" />

            <com.appdupe.pair.utility.FontTextView
                android:id="@+id/report"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_transparent_clicked"
                android:gravity="center"
                android:padding="10dp"
                android:text="Report "
                android:textColor="@color/black_light"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/grey_logout" />

            <com.appdupe.pair.utility.FontTextView
                android:id="@+id/show_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_transparent_clicked"
                android:gravity="center"
                android:padding="10dp"
                android:text="Show Profile "
                android:textColor="@color/black_light"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/grey_logout" />

            <com.appdupe.pair.utility.FontTextView
                android:id="@+id/hide_moments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_transparent_clicked"
                android:gravity="center"
                android:padding="10dp"
                android:text="Hide Moments "
                android:textColor="@color/black_light"
                android:textSize="15sp" />
        </LinearLayout>

        <Button
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/help_linear"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/popup_theme_background"
            android:padding="8dp"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>